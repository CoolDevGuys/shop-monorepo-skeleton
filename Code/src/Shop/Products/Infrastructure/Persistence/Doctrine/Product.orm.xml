<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="CoolDevGuys\Shop\Products\Domain\Product" table="products">
        <id name="id" type="product_id" column="id" length="36"/>

        <field name="name" type="product_name" length="64"/>
        <embedded name="price" class="CoolDevGuys\Shop\Products\Domain\ProductPrice" use-column-prefix="false"/>
        <field name="createdAt" type="date_time_type" column="created_at"/>
        <field name="updatedAt" type="date_time_type" column="updated_at" nullable="true"/>
    </entity>

</doctrine-mapping>
